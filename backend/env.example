# Data Provider Configuration
DATA_PROVIDER=stooq  # Options: stooq, alpaca (alpaca requires API keys)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # For paper trading

# Storage Configuration
DUCKDB_PATH=./data/trading.db
CACHE_DIR=./data/cache

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Backtest Configuration
WALKFORWARD_TRAIN_YEARS=1
WALKFORWARD_TEST_MONTHS=3
WALKFORWARD_STEP_MONTHS=1
TARGET_VOLATILITY=0.01  # 1% daily volatility target
MAX_POSITION_SIZE=1.0  # Max position as fraction of portfolio
MAX_LEVERAGE=1.0
TRANSACTION_COST_BPS=5  # 5 basis points fixed cost
SLIPPAGE_FACTOR=0.001  # Slippage multiplier

# Rate Limiting
STOOQ_RATE_LIMIT_SECONDS=1.0  # Seconds between requests
ALPACA_RATE_LIMIT_SECONDS=0.2

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/trading_system.log
